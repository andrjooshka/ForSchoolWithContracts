<t:container xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter">
	<t:if test="updatemode">
		Клиент ${client.name} : Редактирование
		<p:else>
			Новый клиент
		</p:else>
	</t:if> 
	<div>
		<t:beaneditform object="client" submitlabel="message:submit-label" exclude="id" add="canceled">
			<p:canceled>
				<t:label for="canceledbox" />
				<t:checkbox t:id="canceledbox" value="client.canceled"/>
			</p:canceled>
		</t:beaneditform>
	</div>
</t:container>