<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html 
	xmlns="http://www.w3.org/1999/xhtml" 
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
    xmlns:p="tapestry:parameter">
<head>
	<meta http-equiv="content-type" content="text/html; charset=utf-8"/>
	<title>${pageTitle}</title>
</head>
<body id="homepage">
	<t:security.authenticated>
		<!--start header-->
		<ul class="nav">
			<span style="float: left;">
				<li class="last" style="line-height:30px;">${user?.fullName}</li>
			</span>
			<span style="float: right; margin-right: 5%;">
				<a href="#" t:type="pageLink" t:page="home">
					<li class="${cssForLi('главная')}">
						<img src="icons/home.png" style="height: 15px; width:19px;"/>
					</li>
				</a>
				<a href="#" t:type="pageLink" t:page="schedules">
					<li class="${cssForLi('Расписания')}">
						Расписания
					</li>
				</a>
				<a href="#" t:type="pageLink" t:page="teachers">
					<li class="${cssForLi('Учителя')}">
						Учителя
					</li>
				</a>
				<a href="#" t:type="pageLink" t:page="clients">
					<li class="${cssForLi('Клиенты')}">
						Клиенты
					</li>
				</a>
				<a href="#" t:type="pageLink" t:page="statistics">
					<li class="${cssForLi('Занятия')}">
						Занятия
					</li>
				</a>
				<a href="#" t:type="pageLink" t:page="crud">
					<li class="${cssForLi('Работа с БД')}">
						Работа с БД
					</li>
				</a>
				<a href="#" t:type="pageLink" t:page="settings">
					<li class="${cssForLi('Настройки')}">
						Настройки
					</li>
				</a>
				<a href="#" t:type="actionlink" t:id="logout" id="logout" class="last">
					<li>
						Выход
					</li>
				</a>
			</span>
		</ul>
		<!--end header-->
	</t:security.authenticated>
	<!-- start page -->
        <div id="page">
            <!-- start content -->
            <div id="content">
                <div class="post">
                    <div class="entry">
                        <t:body/>
                    </div>
                </div>
            </div>
            <!-- end content -->
            <br style="clear: both;"/>
        </div>
        <!-- end page -->
        <!-- start footer -->
		<!--div id="footer">
            <p class="legal">
                &copy;2012 management. All Rights Reserved.
            </p>
        </div-->
        <!-- end footer -->
</body>
</html>
