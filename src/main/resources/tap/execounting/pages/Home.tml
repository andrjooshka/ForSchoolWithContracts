<html t:type="layout"
		t:pageTitle="главная"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
    <div style="margin-left:35%;">
	    
	    <t:pagelink page="schedules" style="margin-top: 0px;" class="homelink">
		    <div class="buttondiv">
		    	<h2>Расписания</h2>
		    	Расписание школ и учителей
		    </div>
	    </t:pagelink>
	    
	    <t:pagelink page="clients" class="homelink">
		    <div class="buttondiv">
		     	<h2>Клиенты</h2>
		     	Сводка и отчеты по клиентам
		    </div>
	    </t:pagelink>
	      
	    <t:pagelink page="statistics" class="homelink">
		    <div class="buttondiv">
		      	<h2>Занятия</h2>
		      	Сводка по проведенным и запланированным занятиям, калькуляция выручки
		    </div>
	    </t:pagelink>
	    
	    <t:pagelink page="CRUD" class="homelink">
		    <div class="buttondiv">
		      	<h2>База данных</h2>
		      	Редактирование информации о: филиалах, клиентах, предметах, учителях и занятиях
		    </div>
	    </t:pagelink>
	      
	    <t:pagelink page="settings" class="homelink">
		    <div class="buttondiv">
		      	<h2>Настройки</h2>
		      	Смена пароля
		    </div>
	    </t:pagelink>
	    
	</div>
  
</html>
