<html t:type="layout"
      t:pageTitle="Вход"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

	<form t:type="form" class="full-form" t:id="loginForm" style="margin-top: 10%; margin-left: 35%;">
		<t:errors />	
		<table class="login">
			<tr>
				<th>
					<label t:type="label" t:for="username">логин:</label>
				</th>
				<td>
					<input t:type="textfield" t:id="username" t:validate="username"/>
				</td>	
			</tr>
			<tr>
				<th><label t:type="label" t:for="password">пароль:</label></th>
				<td><input type="password" t:type="passwordfield" t:id="password" t:validate="password"/></td>
			</tr>
		</table>
		
		<div class="form-submit">
			<input type="submit" value="Войти" />
		</div>
	</form>
  
</html>
