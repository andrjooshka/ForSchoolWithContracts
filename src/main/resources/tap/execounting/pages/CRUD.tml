<html 	t:type="layout"
		t:pageTitle="Работа с базой данных"
      	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      	xmlns:p="tapestry:parameter">
        
        <ul class="nav">
        	<t:loop source="tabs" value="tab">
        		<li>
        		<t:eventlink event="switchtab" context="tab">
	        		<t:if test="tab.equals(selectedTab)">
	        				<strong>${tab}</strong>
	        			<p:else>
	        				${tab}
	        			</p:else>
	        		</t:if>
	        	</t:eventlink>
        		</li>
        	</t:loop>
        </ul>
        
        <t:if test="selectedTab.equals('Clients')">
        	<t:grids.clientgrid/>
        </t:if>
        <t:if test="selectedTab.equals('Teachers')">
        	<t:grids.teachergrid/>
        </t:if>
        <t:if test="selectedTab.equals('Events')">
        	<t:grids.lessongrid/>
        </t:if>
        <t:if test="selectedTab.equals('EventTypes')">
        	<t:grids.typegrid/>
        </t:if>
        <t:if test="selectedTab.equals('Facilities')">
        	<t:grids.facilitygrid/>
        </t:if>

</html>
