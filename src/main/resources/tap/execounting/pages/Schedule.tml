<html t:type="layout" pageTitle="${school.name} : Расписание"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
        <!-- Most of the page content, including <head>, <body>, etc. tags, comes from Layout.tml -->
        <div>
        	<t:actionlink t:id="addEvent">
        		<input type="submit" value="Добавить новое занятие" />
        	</t:actionlink>        
        	<t:grid source="events" width="800" row="vent">
        		<t:parameter name="stateCell">
        			<t:form>
			            <t:checkbox value="${vent.state}"/>
				        <t:actionlink t:id="changeState" context="vent">
				        	<t:if test="${vent.state}">
				        		Да
				        		<p:else>
				        			Нет
				        		</p:else>
				        	</t:if>
				        </t:actionlink>
			        </t:form>
			        
        		</t:parameter>
        		<p:actionCell>Xui</p:actionCell>
        	</t:grid>
        	
        </div>


</html>
